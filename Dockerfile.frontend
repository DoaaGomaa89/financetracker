# ---------- Build React ----------
FROM node:18-alpine AS build
WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci
COPY frontend/ ./
RUN npm run build

# ---------- Serve with nginx ----------
FROM nginx:1.25-alpine
COPY --from=build /app/build /usr/share/nginx/html
# nginx conf is bind-mounted by compose as /etc/nginx/conf.d/default.conf
EXPOSE 80
